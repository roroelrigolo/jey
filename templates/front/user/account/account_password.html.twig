{% extends '/front/base.html.twig' %}

{% block title %}Jey{% endblock %}

{% block body %}
    <div class="container mx-auto w-3/4 flex gap-x-6 mb-20 py-20">
        {{ component('Front:Nav:NavAccount',{}) }}
        <div class="w-3/4 bg-fullwhite p-8">
            <p class="text-xl text-primary font-bold mb-4">Mot de passe</p>

            <div class="rounded-lg text-nowrap h-fit px-4 py-2 me-2 mb-4 bg-warning text-warningdark">
                <p>Votre mot de passe doit contenir :</p>
                <ul class="list-disc px-4">
                    <li>Au minimum <b>6 caractères</b></li>
                    <li>Au minimum <b>1 chiffre [0-9]</b></li>
                    <li>Au minimum <b>1 lettre [a-z] ou [A-Z]</b></li>
                    <li>Au minimum <b>1 caractère spécial</b></li>
                </ul>
            </div>

            {{ component('Global:Alert:Alert') }}

            {% include '/front/user/account/_form_password.html.twig' %}
        </div>
    </div>
{% endblock %}