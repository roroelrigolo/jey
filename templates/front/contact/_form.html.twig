            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'bg-white rounded w-full'}}) }}
        </div>
    </div>
    <div class="grid gap-y-4 md:flex md:gap-x-4">
        <div class="flex flex-col w-full">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'bg-white rounded w-full'}}) }}
        </div>
    </div>
    <div class="grid gap-y-4 md:flex md:gap-x-4">
        <div class="flex flex-col w-full">
