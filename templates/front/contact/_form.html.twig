            <input type="checkbox" required>
            <label>J’accepte la politique de confidentialité.</label>
        </div>

    </div>
</div>
<div class="flex justify-end mt-4">
    {{ component('Global:Button',{
        tag: 'button',
        text: 'Envoyer',
        class: 'primary'
    }) }}
</div>
{{ form_end(form) }}