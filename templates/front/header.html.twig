{% set currentPage = app.request.pathinfo|split('/') %}
<nav class="py-8 sticky top-0 w-full bg-fullwhite border-b border-primary px-12 flex gap-x-8 z-50">
    <div class="w-1/12">
        <a href="{{ path('app_front_home') }}"><img width="150px" src="/img/logo.png"></a>
    </div>
    <div class="flex w-8/12">
        <div class="w-full">
            <input class="w-full border p-2 bd-radius-25" placeholder="Je recherche une annonce...">
            <ul class="flex mt-4">
                {% for sport in sports %}
                    <li class="me-4">
                        <a href="{{ path('app_front_sport_show', {'slug': sport.id|trans~'-'~sport.title}) }}">{{ sport.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="flex justify-end w-3/12">
        {{ component('Global:Button', { tag: 'a', text: 'Se connecter', route: 'app_login', class: 'secondary' }) }}
        {{ component('Global:Button', { tag: 'a', text: 'Se cr√©er un compte', route: 'app_register', class: 'primary' }) }}
    </div>
</nav>


