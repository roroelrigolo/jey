<div class="bg-fullwhite rounded">
    <div class="p-4">
        <p class="text-xl text-primary font-bold">Vos derniers messages</p>
        <p>avec dâ€™autres utilisateurs</p>
    </div>
    <div class="flex flex-col gap-y-2 h-[595px] overflow-y-scroll">
        {% for conversation in this.conversations|sort((a, b) => b.updatedAt <=> a.updatedAt) %}
            {% if mobile is defined %}
                {% if conversation_display is defined %}
                    {{ component('Front:Conversation:ConversationItemMobile', { conversation: conversation, conversation_display:conversation_display }) }}
                {% else %}
                    {{ component('Front:Conversation:ConversationItemMobile', { conversation: conversation }) }}
                {% endif %}
            {% else %}
                {% if conversation_display is defined %}
                    {{ component('Front:Conversation:ConversationItem', { conversation: conversation, conversation_display:conversation_display }) }}
                {% else %}
                    {{ component('Front:Conversation:ConversationItem', { conversation: conversation }) }}
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
</div>