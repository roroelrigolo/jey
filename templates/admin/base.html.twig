<!DOCTYPE html>
<html class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="/img/logo_carre_jaune.png">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <script src="https://kit.fontawesome.com/7056fd5bbf.js" crossorigin="anonymous"></script>
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="d-flex h-100">
        {% set nav_items = [
            ['Dashboard','app_admin_dashboard','fa-regular fa-gauge','dashboard'],
            ['Produits','app_admin_product','fa-regular fa-coins','product'],
            ['Sports','app_admin_sport','fa-regular fa-basketball','sport'],
            ['Ligues','app_admin_league','fa-regular fa-trophy','league'],
            ['Ã‰quipes','app_admin_team','fa-sharp fa-regular fa-people-group','team'],
            ['Joueurs','app_admin_player','fa-regular fa-person-running','player'],
            ['Marques','app_admin_brand','fa-regular fa-tag','brand'],
            ['Utilisateurs','app_admin_user','fa-regular fa-user','user'],
        ] %}
        {{ component('Admin:Nav:Nav', { items: nav_items }) }}
        <div class="global-content-back w-100">
            <div class="nav-bar-back w-100 py-3 px-5">
                <h2>Dashboard</h2>
            </div>
            <div class="content-back py-4 px-5">
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
