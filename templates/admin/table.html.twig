<div class="first-line bd-radius-5 row p-3 mb-3">
    {% set i = 0 %}
    {% for title in titles %}
        <div class="{{ cols[i] }} px-1"><p>{{ title }}</p></div>
        {% set i = i+1 %}
    {% endfor %}
</div>
{% for data in datas %}
    {% set i = 0 %}
    <a href="{{ path(url,{'id': data[0]}) }}">
        <div class="other-line row bd-radius-5 py-2 px-3 mb-3">
            {% for value in data %}
                <div class="{{ cols[i] }} px-1"><p class="{{ features[i] }}">{{ value|raw }}</p></div>
                {% set i = i+1 %}
            {% endfor %}
        </div>
    </a>
{% endfor %}
