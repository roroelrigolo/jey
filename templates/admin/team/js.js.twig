function displayPageFrom(id){
    let contents =  document.getElementsByTagName('form')[0].getElementsByClassName('content-form');
    for (let i=0;i<contents.length;i++){
        contents[i].classList.add('hidden');
    }
    document.getElementById(id).className = "content-form";
    let navs =  document.getElementsByClassName('nav-link');
    for (let i=0;i<contents.length;i++){
        navs[i].className = "nav-link";
    }
    document.getElementById(id+'-tab').classList.add('text-primary');
    document.getElementById(id+'-tab').classList.add('font-bold');
    document.getElementById(id+'-tab').classList.add('underline');
}

