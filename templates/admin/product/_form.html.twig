<ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="general-tab" onclick="displayPageFrom('general')">Général</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="a-propos-tab" onclick="displayPageFrom('a-propos')">A propos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="caracteristiques-tab" onclick="displayPageFrom('caracteristiques')">Caractéristiques</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="user-tab" onclick="displayPageFrom('user')">Utilisateur</a>
