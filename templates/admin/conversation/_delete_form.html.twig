<form method="post" action="{{ path('app_admin_conversation_delete', {'id': conversation.id}) }}"
      onsubmit="return confirm('Voulez vous vraiment supprimer cette conversation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conversation.id) }}">
    {{ component('Global:Button',{
        tag: 'button',
        text: 'Supprimer',
        class: 'delete'
    }) }}
</form>
